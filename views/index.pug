doctype html
html
  include includes/head.pug

  body
    div.bg
    div.container
      if status === 'success'
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            form(method='GET', action='/fileOptions', id='optionsForm')
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">Sharing options</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                      <label id="link" class="control-label">Link to file:</label>
                      <input type="text" class="form-control" id="linkToFile" value="localhost:3000/file/#{message}">
                    </div>
                    <div class="form-group" id="optionsPrivacy">
                      <label for="message-text" class="control-label">Privacy:</label>
                      <div class="radio-inline">
                        <label>
                          <input type="radio" name="optionsPrivacy" id="optionsPublic" value="public" checked>
                          |Public
                        </label>
                      </div>
                      <div class="radio-inline">
                        <label>
                          <input type="radio" name="optionsPrivacy" id="optionsPrivate" value="private">
                          |Private
                        </label>
                      </div>
                    </div>
                    <div class="form-group" id="addInputHere">
                    </div>
                </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
              </div>
            </div>
          </div>
      else if status === 'failed'
        <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        =message
        </div>

      div.centered
        div.row
          form(method='POST', action='/upload', encType='multipart/form-data')
            div.col-md-4
            div.col-md-4
              label.control-label= 'Upload a file'
              input.file(type='file', name="uploadedFile")
            div.col-md-4
      div.bottom
       div.row
        div.col-md-12= 'fileSharer! made in a hurry by Abdelilah Benhima'

    script(src='/js/jquery-3.1.1.min.js')
    script(src='/js/bootstrap.js')
    script(src='/js/fileinput.min.js')
    script(src='/js/site.js')
